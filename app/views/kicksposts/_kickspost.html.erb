<% if params[:display] == "square" %>
  <li id="postsquare-<%= kickspost.id %>" class="postsquare-list">
    <div class="square-picture">
      <%= link_to image_tag(picture_url(kickspost), alt: kickspost.content, class: 'cover'), kickspost_path(kickspost.user.mysize_id, kickspost) %>
    </div>
    <div class="kicks-size">
      <%= 21.5 + kickspost.size.to_i / 2.0 %>
    </div>
  </li>
<% else %>
  <li id="kickspost-<%= kickspost.id %>" class="kickspost-list">
    <div class="post-top">
      <div class="post-icon">
        <%= link_to image_tag(image_url(kickspost.user), size: 34), user_path(kickspost.user, display: "square") %>
      </div>
      <div class="post-user">
        <div class="post-name">
          <%= link_to kickspost.user.name, user_path(kickspost.user, display: "square") %>
        </div>
        <div class="post-mysizeid">
          <%= link_to fa_icon("at") + kickspost.user.mysize_id, user_path(kickspost.user, display: "square") %>
        </div>
      </div>
      <div class="c post-shoesize">
        <%= link_to 21.5 + kickspost.user.shoe_size.to_i * 0.5, user_path(kickspost.user, display: "square") %>
      </div>
      <div class="c post-menu">
        <% if current_user == kickspost.user %>
          <div id="post-nav-<%= kickspost.id %>" class="post-nav">
            <%= fa_icon("ellipsis-h") %>
          </div>
          <ul id="nav-list-<%= kickspost.id %>" class="nav-list">
            <li><%= link_to "削除",
                    kickspost_path(kickspost.user.mysize_id, kickspost),
                    method: :delete,
                    data: { confirm: "本当に削除してよろしいですか？" } %></li>
            <li class="bar"></li>
            <li><%= link_to "編集", '#' %></li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="post-middle">
      <% unless kickspost.picture.nil? %>
        <div class="post-link">
          <div class="post-picture">
            <%= link_to image_tag(picture_url(kickspost), alt: kickspost.content), kickspost_path(kickspost.user.mysize_id, kickspost) %>
          </div>
          <div class="post-size">
            <%= 21.5 + kickspost.size.to_i / 2.0 %>
          </div>
        </div>
      <% end %>
      <div class="post-react">
        <%= link_to fa_icon("heart"), '#' %>
        <%= link_to fa_icon("thumbs-up"), '#' %>
      </div>
    </div>
    <div class="post-bottom">
      <div class="post-content">
        <%= link_to kickspost.user.mysize_id, user_path(kickspost.user, display: "square") %> <%= kickspost.content %>
      </div>
      <div class="post-time">
        <span><%= time_ago_in_words(kickspost.created_at) %>前</span>
      </div>
    </div>
  </li>
<% end %>