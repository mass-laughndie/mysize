<% if logged_in? %>
  <div class="form-good">
    <%= form_for(current_user.active_goods.build, remote: true) do |f| %>
      <div><%= hidden_field_tag :post_type, type %></div>
      <div><%= hidden_field_tag :post_id, post.id %></div>
      <%= button_tag fa_icon("thumbs-o-up") %>
    <% end %>
  </div>
<% else %>
  <div class="c form-good">
    <%= link_to fa_icon("thumbs-o-up"), '#', class: 'ban' %>
  </div>
<% end %>