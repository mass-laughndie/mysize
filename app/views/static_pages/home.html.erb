<% if logged_in? %>
  <div class="post-main">
    <% if @kicksposts.blank? %>
      <%= render partial: 'shared/no_data',
                 locals: { user: @user,
                           target: "data" } %>
    <% else %>
      <div class="post-line clear">
        <ul>
          <%= render @kicksposts %>
        </ul>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="content">
    <div class="page-title c">
      <div class="top-text">
        <%= image_tag("/images/apps_icon5.png", size: 90) %>
        <span class="logo-font">Mysize</span>
      </div>
    </div>
    <h2 class="c">～開発中～</h2>
    <div class="c button twitter-color">
      <%= link_to fa_icon("twitter") + "Twitterで登録/ログイン", 'auth/twitter' %>
    </div>
    <div class="c button accent">
      <%= link_to "MysizeIDで登録する", signup_path %>
    </div>
    <div class="c atention">
      <p>
        <%= link_to "MysizeIDでログインする", login_path %>
      </p>
    </div>
  </div>
<% end %>