<% provide(:title, @user.name + "(@" + @user.mysize_id + ")さんのグッド") %>

<div class="content-mspace">
  <%= render partial: 'users/user_profile',
             locals: { user: @user } %>
</div>
<div class="post">
  <%= render partial: 'users/post_select',
             locals: { user: @user } %>
  <div class="post-main">
    <% if @goods.blank? %>
      <%= render partial: 'shared/no_data',
                 locals: { user: @user,
                           target: "good" } %>
    <% else %>
      <div class="post-line clear">
        <ul>
          <%= render @goods %>
        </ul>
      </div>
    <% end %>
  </div>
</div>